<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/viewCardStar1"
        android:layout_width="@dimen/cardview_mini_icon"
        android:layout_height="@dimen/cardview_mini_icon"
        android:layout_margin="2dp"
        android:background="@drawable/ic_circle_accent"
        android:src="@drawable/ic_stars_white_24dp" />

    <ImageView
        android:id="@+id/viewCardStar2"
        android:layout_width="@dimen/cardview_mini_icon"
        android:layout_height="@dimen/cardview_mini_icon"
        android:layout_margin="2dp"
        android:background="@drawable/ic_circle_accent"
        android:src="@drawable/ic_stars_white_24dp" />

    <ImageView
        android:id="@+id/viewCardStar3"
        android:layout_width="@dimen/cardview_mini_icon"
        android:layout_height="@dimen/cardview_mini_icon"
        android:layout_margin="2dp"
        android:background="@drawable/ic_circle_accent"
        android:src="@drawable/ic_stars_white_24dp" />

</LinearLayout>

